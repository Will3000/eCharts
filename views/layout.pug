  body
    div(class="container")
      div(class="header clearfix")
        nav
          ul(class="nav nav-pills pull-right")
            li(role="presentation")
              a(href="/") Home
            li(role="presentation")
              a(href="#") Contact
            li(role="presentation")
              a(href="/users/signup") Register
            if login
              li(role="presentation")
                a(href="/users/signout") Logout
            else
              li(role="presentation")
                a(href="/users/login") Login
          h3(class="text-muted") eCharts
      div(class="row")
        div(class="col-lg-12")
          block content
