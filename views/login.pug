extends layout

block content
  h2 Login Page
  form(action="http://localhost:3000/users/login",method="post")
    .form-group
      label Email
      input.form-control(type='email', name="email", required)
    .form-group
      label Password
      input.form-control(type='password', name="password", required)
    button.btn.btn-default(type='submit') Login
  a(href='/users/signup', class='text-center new-account') Create an account
  a(href='/users/auth/facebook') Login with Facebook
  #message
  if message
    h1.text-center.error-message #{message}
