extends layout

block content
  .container
    h1 Register Page
    form(action="/users/signup",method="POST")
      .form-group
        label Email
        input.form-control(type='email', name="email",required, autofocus)
      .form-group
        label Username
        input.form-control(type='text', name="username",required)
      .form-group
        label First Name
        input.form-control(type='text', name="firstName",required)
      .form-group
        label Last Name
        input.form-control(type='text', name="lastName",required)
      .form-group
        label Password
        input.form-control(type='password', name="password",required)
      button.btn.btn-default(type='submit') Sign Up
    #message
    if message
      h1.text-center.error-message #{message}
